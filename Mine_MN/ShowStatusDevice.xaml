<Window x:Class="maintenance.ShowStatusDevice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="نمایش وضعیت دستگاه ها" Height="671" Width="513" Background="White" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid ShowGridLines="False" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition  Height="6*"/>
            <RowDefinition  Height="30"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="Com_SelectDevice" Grid.Row="0" FlowDirection="RightToLeft" HorizontalAlignment="Right"   VerticalAlignment="Top" Width="150" Margin="0,10,10,0" Height="24" FontFamily="B Nazanin" FontSize="14" FontWeight="Bold" DropDownClosed="Com_SelectDevice_DropDownClosed" />

        <ScrollViewer  Grid.Row="2"  Name="ScrollViewer1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  CanContentScroll="True">
            <Grid HorizontalAlignment="Center"  ShowGridLines="True" x:Name="PageGrid"/>
        </ScrollViewer>
    </Grid>
</Window>
