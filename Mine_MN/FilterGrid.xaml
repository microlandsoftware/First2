    <Grid>

        <Label Width="73" VerticalAlignment="Top" Margin="401,13,0,0" Height="30" HorizontalAlignment="Left" FontFamily="B Nazanin" FontSize="16" FontWeight="Bold" Content=":از تاریخ"/>

        <Custom:DatePicker HorizontalAlignment="Left" Margin="265,15,0,0" x:Name="Text_StartDate"  FontWeight="Bold"   FontSize="12" SelectedDateFormat="Long"  VerticalAlignment="Top" Width="129" Height="26" />
        <Label Width="73" VerticalAlignment="Top" Margin="162,13,0,0" Height="30" HorizontalAlignment="Left" FontFamily="B Nazanin" FontSize="16" FontWeight="Bold" Content=":تا تاریخ"/>
        <Custom:DatePicker HorizontalAlignment="Left" Margin="31,15,0,0" x:Name="Text_EndDate"  FontWeight="Bold"   FontSize="12" SelectedDateFormat="Long"  VerticalAlignment="Top" Width="126" Height="26" />
